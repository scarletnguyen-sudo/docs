{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Epsilo Docs",
  "description": "Unified workspace for retail media teams.",
  "logo": { "light": "/logo/dark.svg", "dark": "/logo/light.svg", "href": "https://one.epsilo.io" },
  "favicon": "/favicon.svg",

  "colors": {
    "primary": "#2563EB",
    "light": "#F8FAFC",
    "dark": "#0F172A"
  },

  "appearance": { "default": "system", "strict": false },
  "icons": { "library": "lucide" },

  "styling": {
    "eyebrows": "breadcrumbs",
    "codeblocks": "system"
  },

  "seo": {
    "indexing": "navigable",
    "metatags": { "og:title": "Epsilo Docs", "og:type": "website" }
  },

  "search": { "prompt": "Search docsâ€¦" },

  "interaction": {
    "drilldown": false
  },

  "head": {
    "links": [
      { "rel": "preconnect", "href": "https://fonts.googleapis.com" },
      { "rel": "preconnect", "href": "https://fonts.gstatic.com", "crossorigin": "anonymous" },
      { "rel": "stylesheet", "href": "https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" },
      { "rel": "stylesheet", "href": "/styles.css" }
    ]
  },
  "css": ["/styles.css"],

  "navbar": {
    "links": [
      { "label": "Website", "href": "https://next.epsilo.ai", "icon": "globe" }
    ],
    "primary": {
      "type": "button",
      "label": "Book a demo",
      "href": "https://calendly.com/alex-vo/meeting-with-alex?back=1&month=2025-10"
    }
  },

  "navigation": {
    "groups": [
      {
        "group": "Introduction",
        "icon": "home",
        "expanded": false,
        "pages": [
          "introduction/getting-started",
          "introduction/navigating-epsilo"
        ]
      },
      {
        "group": "Optimization Playbooks",
        "icon": "plug",
        "expanded": false,
        "pages": [
          "optimization-playbooks/ad-spend-optimization",
          "optimization-playbooks/hyper-automation-scripts",
          "optimization-playbooks/thinking-in-campaigns"
        ]
      },
      {
        "group": "How to Guides",
        "icon": "puzzle",
        "expanded": false,
        "pages": [
          "how-to-guide/gmv-max",
          "how-to-guide/budget-distribution",
          "how-to-guide/attribute-scheduled",
          "how-to-guide/campaigns",
          "how-to-guide/hyper-automation",
          "how-to-guide/multi-row",
          "how-to-guide/setting-up-views"
        ]
      }
    ]
  },

  "footer": {
    "socials": {
      "x": "https://x.com/epsilo",
      "linkedin": "https://www.linkedin.com/company/epsilo"
    },
    "links": [
      {
        "header": "Resources",
        "items": [
          { "label": "Pricing", "href": "https://next.epsilo.ai/pricing" }
        ]
      }
    ]
  },

  "errors": {
    "404": {
      "redirect": false,
      "title": "Page not found",
      "description": "This page moved or never existed. Use the search bar above."
    }
  }
}
